<%- include('../layouts/header') %>
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-6 col-md-6 col-sm-12 order-md-1 order-last">
                    <div class="row">
                        <div class="col-2 col-md-3 col-sm-12 order-md-1 order-last">
                            <h3>Categories</h3>
                        </div>
                    </div>
                </div>
                <div class="col-6 col-md-6 col-sm-12 order-md-2 order-last">
                    <div class="buttons float-end">
                        <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#addCategoryModel">
                            <i class="fas fa-plus">&nbsp;</i>
                            Add Category
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header" style="text-transform: capitalize;">
                    Categories
                </div>
                <div class="card-body">
                    <table class="table table-striped" id="dataTable" style="width:100%;">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>App </th>
                                <th>Title</th>
                                <th>Background Color</th>
                                <th>Position</th>
                                <th>Action</th>
                                <th>Menus</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>

        <div class="modal fade text-left" id="addCategoryModel" tabindex="-1" role="dialog"
            aria-labelledby="myModalLabel33" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
                <div class="modal-content" style="overflow: scroll;">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel33">Add Category</h4>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <i data-feather="x"></i>
                        </button>
                    </div>
                    <form action="#" id="addCategoryForm">
                        <div class="modal-body">
                            <label>App: </label>
                            <div class="form-group">
                                <select class="choices form-control form-select-white"
                                    style="width: 100%; background-color: white; color:black ;" id="app_id"
                                    name="app_id" data-placeholder="Select a app">
                                    <% apps.forEach((app)=> { %>
                                        <% if(app.is_active){ %>
                                            <option value="<%= app.id %>">
                                                <%= app.name %>
                                            </option>
                                            <% } %>
                                                <% }) %>
                                </select>
                                <p class="text-danger" id="err-app_id" style=" color: #9f0606; display: none">app is
                                    required
                                </p>
                            </div>
                            <label>Title: </label>
                            <div class="form-group">
                                <input type="text" placeholder="Enter title " id="title" name="title"
                                    class="form-control" required>
                                <p class="text-danger" id="err-title" style=" color: #9f0606; display: none">title is
                                    required
                                </p>
                            </div>
                            <label>Background color: </label>
                            <div class="form-group">
                                <input type="color" name="bg_color" id="bg_color" class="form-control">
                                <p class="text-danger" id="err-bg_color" style="color: #9f0606; display: none">
                                    background color is required</p>
                            </div>
                            <label>Position: </label>
                            <div class="form-check">
                                <input type="radio" name="position" id="list" value="list" checked>
                                <label for="list">
                                    list
                                </label>
                                <input type="radio" name="position" value="grid" id="grid">
                                <label for="grid">
                                    grid
                                </label>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="reset" class="btn btn-light-secondary" data-bs-dismiss="modal">

                                <span>Close</span>
                            </button>
                            <button type="submit" class="btn btn-dark" id="addCategoryButton">

                                <span>Add</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade text-left" id="updateCategoryModel" tabindex="-1" role="dialog"
            aria-labelledby="myModalLabel33" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
                <div class="modal-content" style="overflow: scroll;">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel33">Update Category</h4>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <i data-feather="x"></i>
                        </button>
                    </div>
                    <form action="#" id="updateCategoryForm">
                        <div class="modal-body">
                            <label>App</label>
                            <div class="form-group">
                                <select class="choices form-control form-select-white"
                                    style="width: 100%; background-color: white; color:black ;" id="up-app_id"
                                    name="app_id">
                                    <% Apps.forEach((app)=> { %>
                                        <% if(app.is_active){ %>
                                            <option value="<%=app.id %>">
                                                <%= app.name %>
                                            </option>
                                            <% } %>
                                                <% }) %>
                                </select>
                            </div>
                            <label>Title: </label>
                            <div class="form-group">
                                <input type="text" placeholder="Enter title " id="up-title" name="title"
                                    class="form-control" required>
                            </div>
                            <label>Background color: </label>
                            <div class="form-group">
                                <input type="color" placeholder="Enter background color" name="bg_color"
                                    id="up-bg_color" class="form-control">
                            </div>
                            <label>Position: </label>
                            <div class="form-check">
                                <input type="radio" name="position" id="up-list" value="list">
                                <label for="list">
                                    list
                                </label>
                                <input type="radio" name="position" id="up-grid" value="grid">
                                <label for="grid">
                                    grid
                                </label>
                            </div>
                            <input name="id" type="hidden" id="id">
                        </div>
                        <div class="modal-footer">
                            <button type="reset" class="btn btn-light-secondary" data-bs-dismiss="modal">

                                <span>Close</span>
                            </button>
                            <button type="submit" class="btn btn-dark" id="updateButtton">

                                <span>Update</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

    <script>

        $(document).ready(function () {
            var table = $('#dataTable').DataTable({
                paging: true,
                responsive: true,
                searching: true,
                ajax: {
                    type: "GET",
                    url: "/admin/categories/data",
                    dataSrc: "data",

                },
                columns: [
                    {
                        "data": null,
                        "render": function (data, type, full, meta) {
                            return meta.row + 1
                        }
                    },
                    { "data": 'app_id' },
                    { "data": 'title' },
                    { "data": 'bg_color' },
                    { "data": 'position' },
                    {
                        "data": null,
                        render: function (data, type, row) {
                            let content = `<td><div class="d-flex">`
                            content = content +
                                '<a href="#"  class="edit" data-value ="' + row.id + '" data-bs-toggle="modal" data-bs-target="#updateCategoryModel"><i class="fas fa-edit" style="color: #000000;"></i></a>'
                            content = content +
                                '<a href="#"  class="delete" data-value ="' + row.id + '" style="margin-left: 30px;"><i class="fa-regular fa-trash-can" aria-hidden="true"  style="color: red;"></i></a>'
                            content = content + `</div></td>`
                            return content
                        }
                    },
                    {
                        "data": null,
                        render: function (data, type, row) {
                            let content = `<td><div class="d-flex">`
                            content = content +
                                `<a href="/admin/categories/${row.id}"  class="view" style = "color: blue;" > view menus</a >`
                            content = content + `</div ></td > `
                            return content
                        }
                    }
                ]
            });

            $('#addCategoryButton').click(function (e) {
                e.preventDefault();

                const app_id = $('#app_id').val()
                const title = $('#title').val()
                const bg_color = $('#bg_color').val()
                const position = $("[name='position']:checked").val();

                const data = {
                    app_id, title, bg_color, position
                }

                fetch(`/admin/categories`,
                    {
                        method: "POST",
                        body: JSON.stringify(data),
                        mode: 'cors',
                        cache: 'no-cache',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                    })
                    .then(async function (res) {
                        const data = await res.json()
                        if (data.success) {
                            $('#addCategoryModel').modal('hide');
                            Swal.fire({
                                icon: "success",
                                title: "Success",
                                text: "category added successfully.",
                                timer: 1000,
                                showConfirmButton: false
                            })
                            table.ajax.reload();
                        }
                        else {
                            Swal.fire({
                                icon: "error",
                                title: "Oops...",
                                text: "Something is wrong",
                                confirmButtonColor: "#000000",
                            })
                        }
                    })
                    .catch(function (res) {
                        console.log(res);
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Something is wrong",
                            confirmButtonColor: "#000000",
                        })
                    })
            })

            $('#addCategoryModel').on('show.bs.modal', function (event) {
                $("#addCategoryForm").trigger("reset");
            })
        })

        $(document).on('click', '.edit', function (e) {
            e.preventDefault()
            var categoryId = $(this).data('value')
            fetch(`/admin/categories/view/${categoryId}`)
                .then(response => response.json())
                .then((data) => {
                    const { app_id, title, bg_color, position, id } = data.data
                    $('#id').val(id)
                    $('#up-app_id').val(app_id)
                    $('#up-title').val(title)
                    $('#up-bg_color').val(bg_color)
                    if (position == 'list') {
                        $("#up-list").prop({ checked: true });
                    }
                    else {
                        $("#up-grid").prop({ checked: true });
                    }
                })
                .catch((err) => console.log(err))
        })

        $('#updateButtton').click(function (e) {
            e.preventDefault();
            var data = $('#updateCategoryForm').serializeArray().reduce((o, { name: n, value: v }) => Object.assign(o, { [n]: v }), {});

            fetch(`/admin/categories/${data.id}`,
                {
                    method: "PUT",
                    body: JSON.stringify(data),
                    mode: 'cors',
                    cache: 'no-cache',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                })
                .then(async function (res) {
                    const data = await res.json()
                    if (data.success) {
                        $('#updateCategoryModel').modal('hide');
                        Toastify({
                            text: "category updated successfully.",
                            duration: 1000,
                            close: true,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "rgb(31 191 95)",
                        }).showToast();
                        $('#dataTable').DataTable().ajax.reload();
                    }
                    else {
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Something is wrong",
                            confirmButtonColor: "#000000",
                        })
                    }
                })
                .catch(function (res) {
                    console.log(res);
                    Swal.fire({
                        icon: "error",
                        title: "Oops...",
                        text: "Something is wrong",
                        confirmButtonColor: "#000000",
                    })
                })
        });

        $(document).on('click', '.delete', function () {
            const id = $(this).data('value')

            Swal.fire({
                title: "Are you sure about deleting this category?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Delete",
                confirmButtonColor: "#000000",
                cancelButtonColor: "#999999",
                reverseButtons: true,
                focusConfirm: false,
                focusCancel: true,
            })
                .then((e) => {
                    if (e.isConfirmed) {
                        fetch(`/admin/categories/${id}`,
                            {
                                method: "DELETE",
                                mode: 'cors',
                                cache: 'no-cache',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                            })
                            .then(async function (res) {
                                const data = await res.json()
                                if (data.success) {
                                    Toastify({
                                        text: "category deleted successfully.",
                                        duration: 1000,
                                        close: true,
                                        gravity: "top",
                                        position: "right",
                                        backgroundColor: "rgb(245 90 90)",
                                    }).showToast();
                                    $('#dataTable').DataTable().ajax.reload();
                                }
                                else {
                                    Swal.fire({
                                        icon: "error",
                                        title: "Oops...",
                                        text: "Something is wrong",
                                        confirmButtonColor: "#000000",
                                    })
                                }
                            })
                            .catch(function (res) {
                                console.log(res);
                                Swal.fire({
                                    icon: "error",
                                    title: "Oops...",
                                    text: "Something is wrong",
                                    confirmButtonColor: "#000000",
                                })
                            })
                    }
                })
        })

    </script>

    <%- include('../layouts/footer') %>